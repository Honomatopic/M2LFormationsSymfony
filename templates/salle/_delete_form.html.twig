<form method="post" action="{{ path('salle_delete', {'id': salle.id}) }}" onsubmit="return confirm('Etes-vous sur de vouloir supprimer cette salle ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ salle.id) }}">
    <button class="btn">&#128465;&#65039; Supprimer</button>
</form>
