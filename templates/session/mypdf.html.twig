{% extends 'base.html.twig' %}

{% block body %}
      
  <h2>La session de formation n° {{ session.id }} de {{ session.intitule }}</h2>
  <table class="table">
    <tbody>
      <tr>
          <th>Id</th>
          <td>{{ session.id }}</td>
      </tr>
      <tr>
          <th>L'intitulé de la formation</th>
          <td>{{ session.intitule }}</td>
      </tr>
      <tr>
          <th>La durée</th>
          <td>Du {{ session.datedebut ? session.datedebut|date('d/m/Y') : '' }} Au {{ session.datefin ? session.datefin|date('d/m/Y') : '' }}</td>
      </tr>
      <tr>
          <th>La salle</th>
          <td>{{ session.salle }}</td>
      </tr>
      <tr>
          <th>L'intervenant</th>
          <td>{{ session.nomintervenant }}</td>
      </tr>
      <tr>
          <th>Le prestataire</th>
          <td>{{ session.prestataire }}</td>
      </tr>
  </tbody>
  </table>

<footer>
  <hr>
  &copy
  {{ "now"|date("Y") }}
  Honoré Rasamoelina
</footer>
{% endblock %}