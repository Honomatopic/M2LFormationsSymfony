{% extends 'base.html.twig' %}
{% block body %}
  {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <h2>Bienvenue sur le site de la M2L</h2>
  <fieldset>
    <legend>Veuillez-vous connecter</legend>
    <form action="{{ path('login')}}" method="post">
      <div>
        <input placeholder="Votre email" type="email" name="_username" value="{{ last_username }}">
      </div>
      <div>
        <input placeholder="Votre mot de passe" type="password" name="_password">
      </div>
      <div>
        <button type="submit">&#128477; Se connecter</button>
      </div>
    </form>
  </fieldset>
  <a href="{{ path('employe_new') }}">&#128395;&#65039;Pour s'inscrire</a>
{% endblock %}
